extends layout

block content
    div.hero-section
        h2 Hola, soy 
            span el Colo
        h1 Hero Section
        p Construyendo una lista de skills<br>con Node.js y Express MVC

    main.task-section
        h3 Lista de skills
        a.add-btn(href="/skill-add")
            i(class="bi bi-plus-circle")
            span Agregar skill

        ul.skill-list
            if skills.length === 0
                p AÃºn no hay skills
            else
                each skill in skills
                    li.skill-item
                        span.skill-title #{skill.title}
                        if skill.icon
                            span.skill-icon
                                img(src=skill.icon alt=skill.title width="50" height="50")
                        a.edit-btn(href=`/skill-edit/${skill.id}`)
                            i(class="bi bi-pencil")
                            span Editar
                        form.delete-form(action=`/skill-delete/${skill.id}` method="POST")
                            button.delete-btn(type="submit") 
                                i(class="bi bi-trash")
                                span Eliminar
