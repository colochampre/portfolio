extends layout

block main
    main.main-wrapper.panel
        div.auth-card
            div.auth-header
                i.bi.bi-joystick
                h1 Snake Soccer
                p Crea tu cuenta para empezar

            if error
                div.alert.alert-danger.alert-dismissible.fade.show(role="alert")
                    = error
                    button.btn-close(type="button", data-bs-dismiss="alert")

            form.auth-form(method="POST", action="/register")
                div.form-group
                    label(for="username")
                        i.bi.bi-person-fill
                        |  Usuario
                    input#username.form-control(
                        type="text", 
                        name="username", 
                        placeholder="Elige un nombre de usuario",
                        required,
                        autofocus,
                        minlength="3",
                        maxlength="50",
                        pattern="[a-zA-Z0-9_]+"
                    )
                    small.form-text Solo letras, números y guiones bajos (3-50 caracteres)

                div.form-group
                    label(for="password")
                        i.bi.bi-lock-fill
                        |  Contraseña
                    input#password.form-control(
                        type="password", 
                        name="password", 
                        placeholder="Crea una contraseña",
                        required,
                        minlength="6"
                    )
                    small.form-text Mínimo 6 caracteres

                div.form-group
                    label(for="confirmPassword")
                        i.bi.bi-lock-fill
                        |  Confirmar Contraseña
                    input#confirmPassword.form-control(
                        type="password", 
                        name="confirmPassword", 
                        placeholder="Repite tu contraseña",
                        required,
                        minlength="6"
                    )

                button.btn.btn-primary.w-100(type="submit")
                    i.bi.bi-person-plus-fill
                    |  Crear Cuenta

            div.auth-footer
                p ¿Ya tienes cuenta? 
                    a(href="/login") Inicia sesión aquí
