extends layout

block stylesheets
    link(rel="stylesheet", href="/css/signin.css")

block main
    main.main-wrapper.panel.justify-center
        div.auth-card
            div.auth-header
                i.bi.bi-joystick.flicker2
                h1.flicker1 Snake Soccer
                p Crea tu cuenta para empezar

            if error
                div.alert.alert-danger.alert-dismissible.fade.show(role="alert")
                    = error
                    button.btn-close(type="button", data-bs-dismiss="alert")

            form.auth-form(method="POST", action="/register")
                div.form-group
                    label(for="username")
                        i.bi.bi-person-fill
                        span Usuario
                    input#username.form-control(
                        type="text", 
                        name="username", 
                        placeholder="Elige un nombre",
                        required,
                        autofocus,
                        minlength="3",
                        maxlength="50",
                        pattern="[a-zA-Z0-9_]+"
                    )
                    small.form-text Solo letras, números y guiones

                div.form-group
                    label(for="password")
                        i.bi.bi-lock-fill
                        span Contraseña
                    input#password.form-control(
                        type="password", 
                        name="password", 
                        placeholder="Crea una contraseña",
                        required,
                        minlength="6"
                    )
                    small.form-text Mínimo 6 caracteres

                div.form-group
                    label(for="confirmPassword")
                        i.bi.bi-lock-fill
                        span Confirmar Contraseña
                    input#confirmPassword.form-control(
                        type="password", 
                        name="confirmPassword", 
                        placeholder="Repetir contraseña",
                        required,
                        minlength="6"
                    )

                button.btn.btn-primary.btn-signin.w-100(type="submit")
                    i.bi.bi-person-plus-fill
                    span Crear Cuenta

            div.auth-footer
                p ¿Ya tienes cuenta?<br>
                    a(href="/login") Inicia sesión
