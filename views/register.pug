extends layout

block main
    main.auth-container
        div.auth-card
            div.auth-header
                i.bi.bi-joystick(style="font-size: 3rem; color: #00ff00;")
                h1 Snake Soccer
                p.text-muted Crea tu cuenta para empezar

            if error
                div.alert.alert-danger.alert-dismissible.fade.show(role="alert")
                    = error
                    button.btn-close(type="button", data-bs-dismiss="alert")

            form.auth-form(method="POST", action="/register")
                div.form-group
                    label(for="username")
                        i.bi.bi-person-fill
                        |  Usuario
                    input#username.form-control(
                        type="text", 
                        name="username", 
                        placeholder="Elige un nombre de usuario",
                        required,
                        autofocus,
                        minlength="3",
                        maxlength="50",
                        pattern="[a-zA-Z0-9_]+"
                    )
                    small.form-text Solo letras, números y guiones bajos (3-50 caracteres)

                div.form-group
                    label(for="password")
                        i.bi.bi-lock-fill
                        |  Contraseña
                    input#password.form-control(
                        type="password", 
                        name="password", 
                        placeholder="Crea una contraseña",
                        required,
                        minlength="6"
                    )
                    small.form-text Mínimo 6 caracteres

                div.form-group
                    label(for="confirmPassword")
                        i.bi.bi-lock-fill
                        |  Confirmar Contraseña
                    input#confirmPassword.form-control(
                        type="password", 
                        name="confirmPassword", 
                        placeholder="Repite tu contraseña",
                        required,
                        minlength="6"
                    )

                button.btn.btn-primary.w-100(type="submit")
                    i.bi.bi-person-plus-fill
                    |  Crear Cuenta

            div.auth-footer
                p ¿Ya tienes cuenta? 
                    a(href="/login") Inicia sesión aquí

block styles
    style.
        .auth-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
            padding: 20px;
        }
        .auth-card {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 40px;
            width: 100%;
            max-width: 450px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        .auth-header {
            text-align: center;
            margin-bottom: 30px;
        }
        .auth-header h1 {
            color: #00ff00;
            font-family: 'Courier New', monospace;
            font-weight: bold;
            margin: 15px 0 10px;
            text-shadow: 0 0 10px rgba(0, 255, 0, 0.5);
        }
        .auth-header p {
            color: #aaa;
        }
        .auth-form {
            margin-bottom: 20px;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .form-group label {
            color: #fff;
            margin-bottom: 8px;
            display: block;
            font-weight: 500;
        }
        .form-control {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            color: #fff;
            padding: 12px 15px;
            border-radius: 8px;
            transition: all 0.3s;
        }
        .form-control:focus {
            background: rgba(255, 255, 255, 0.15);
            border-color: #00ff00;
            box-shadow: 0 0 0 0.2rem rgba(0, 255, 0, 0.25);
            color: #fff;
        }
        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.5);
        }
        .form-text {
            color: rgba(255, 255, 255, 0.6);
            font-size: 0.875rem;
            margin-top: 5px;
            display: block;
        }
        .btn-primary {
            background: linear-gradient(135deg, #00ff00 0%, #00cc00 100%);
            border: none;
            padding: 12px;
            font-weight: bold;
            border-radius: 8px;
            transition: all 0.3s;
            color: #000;
        }
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 255, 0, 0.4);
            background: linear-gradient(135deg, #00cc00 0%, #00aa00 100%);
        }
        .auth-footer {
            text-align: center;
            color: #aaa;
        }
        .auth-footer a {
            color: #00ff00;
            text-decoration: none;
            font-weight: bold;
        }
        .auth-footer a:hover {
            text-decoration: underline;
        }
        .alert {
            border-radius: 8px;
            margin-bottom: 20px;
        }
