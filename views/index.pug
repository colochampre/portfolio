extends layout

block lobby-panel
    //- Mensaje de rotación (solo visible en portrait mode)
    div.rotate-message
        i.bi.bi-phone-landscape.flicker2
        h2.flicker1 Gira tu dispositivo
        p Para una mejor experiencia de juego.

    //- Botones hamburguesa (solo visibles en móvil/tablet landscape)
    button.hamburger-btn.left#lobbyToggle(aria-label="Toggle Lobby")
        i.bi.bi-card-list
    button.hamburger-btn.right#userToggle(aria-label="Toggle User Panel")
        i.bi.bi-person-square

    div.lobby-wrapper.panel#lobbyPanel
        h2.lobby-title.flicker1 Lobby
        div.room-options
            div.room-create
                label.private-room
                    span Priv
                    input#private-room(type="checkbox")
                select#select-duration
                    option(value="120" selected) 2m
                    option(value="300") 5m
                    option(value="600") 10m
                select#select-mode
                    option(value="1vs1" selected) 1v1
                    option(value="2vs2") 2v2
                    option(value="3vs3") 3v3
                    option(value="practice") Practice
                select#select-ball
                    option(value="texture-1" selected) Txt1
                    option(value="texture-2") Txt2
                    option(value="texture-3") Txt3

            //- Crear sala POST con room options seleccionados
            button.btn.btn-primary.w-100(type="button")
                i.bi.bi-plus-square
                span Crear sala

            div.room-join-by-id
            div.room-list

block main
    div.overlay#overlay
    div.main-wrapper.panel
        h1.main-title.flicker Snake Soccer

block user-panel
    div.user-wrapper.panel#userPanel
        h2.user-title.flicker2 #{user.username}
        div.experience-container
            div.experience-bar-background
                div#experience-bar-fill
            p.experience-text
                span#stat-xp 0 / 0
        div.nav-list
            if user && user.role === 'admin'
                div.nav-item
                    a.btn.btn-primary.nav-link.w-100(href="/tasks")
                        i(class="bi bi-list-task")
                        span Tareas

            if user
                div.nav-item
                    form(method="POST", action="/logout")
                        button.btn.btn-primary.nav-link.w-100(type="submit")
                            i(class="bi bi-box-arrow-right")
                            span Salir
    